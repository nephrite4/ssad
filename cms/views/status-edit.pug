extends layoutAdmin

block content
    .content
        // START JUMBOTRON
        //.jumbotron(data-pages='parallax')
        .container-fluid.container-fixed-lg.sm-p-l-0.sm-p-r-0
            .inner
        // END JUMBOTRON
        // START CONTAINER FLUID
        <div class = "bg-color-container4">
            <!-- START card -->
            <div class="card card-transparent">
              <div class="card-header ">                
                <h5 class="card-title">#{page.name}</h5>
              </div>

                <div class="clearfix"></div>
              </div>
              <div class="card-block">
                    form#form-status-edit(role='form', method="POST", action='../status/edit')
                        <input type="hidden" name="status_id" value= #{data.statushold.status_id}>
                        .row
                            .col-sm-6
                                .form-group.required 
                                    label.control-label Name
                                    input#name.form-control(type='text', name='status_name', placeholder='Change status name', required='', value= data.statushold.status_name)
                        .row.align-items-end
                            .text-right.col-sm-12 
                                div
                                    a.button.btn.btn(href='/status') Cancel
                                div
                                    a
                                        button.btn.btn-success(type='submit', style='margin-left: 39%;') Update
              </div>
            </div>
            <!-- END card -->
        </div>